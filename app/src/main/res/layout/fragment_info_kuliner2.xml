<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurcahyadiperdana.banyumas.Wisata.info_wisata1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/gubug" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUBUG MAKAN MANG ENGKING"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satu lagi tempat kuliner berkelas hadir di Purwokerto. Gubug Makan Mang Engking yang berlokasi di Jalan HR Bunyamin Purwokerto, Kabupaten Banyumas, di utara kampus Unsoed, masuk gang sebelah utara Pabuaran Mart. Gubug Makan Meng Engking Purwokerto sudah dibuka sejak 11 Desember 2011 lalu, dengan menu dan suasana yang mengikuti ‘style’ Mang Engking yang sudah buka di berbagai kota. Mang Engking menawarkan kelezatan menu masakan di tengah keasrian alam pedesaan yang khas."
                    android:layout_marginTop="10dp"
                    android:id="@+id/test" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: Jl. HR. Boenyamin, Pabuaran, Purwokerto Utara, Pabuaran, Purwokerto Utara, Kabupaten Banyumas, Jawa Tengah 53121"
                    android:layout_marginTop="10dp"
                    android:id="@+id/test1"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>
