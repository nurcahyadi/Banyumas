<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurcahyadiperdana.banyumas.Wisata.info_wisata1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/pekih" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BAKSO PEKIH"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kuliner yang satu ini menjadi salah satu tempat wajib bagi penggemar bakso di Purwokerto. Warung bakso ini sudah sangat terkenal sejak lama saking enaknya hehe.. Jika dulu menempati lokasi di tanjakan barat jalan pekih dan masih agak kecil, sekarang menempati lokasi yang jauh lebih luas dan nyaman di tanjakan timur jalan pekih"
                    android:layout_marginTop="10dp"
                    android:id="@+id/test" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: Jalan Pekih, Sokanegara, Purwokerto Timur, Sokanegara, Purwokerto Tim., Kabupaten Banyumas, Jawa Tengah 53115"
                    android:layout_marginTop="10dp"
                    android:id="@+id/test1"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>
